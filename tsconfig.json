{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES6",
		"lib": [
			"ESNext"
		],
		"moduleResolution": "node",
		"types": [
			"node"
		],
		"declaration": false,
		"removeComments": true,
		"esModuleInterop": true,
		"strict": true,
		"rootDir": "./src",
		"outDir": "./lib",
		"skipLibCheck": true,
		"baseUrl": ".",
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"./lib",
		"node_modules",
		".vscode"
	]
}